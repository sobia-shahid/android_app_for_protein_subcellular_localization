<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".segmentation"
    android:background="@color/Splashbackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageview_feature"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:id="@+id/responsetext"
            android:textColor="@color/colorPrimaryDark"
            android:text="Click the button to extract features and get number of features extracted"/>

        <Button
            android:id="@+id/feature"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="feature extraction"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:background="@drawable/custom_btn_round"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/txt"
                android:text="No. of extracted features: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt"
                android:textSize="20dp"
                android:id="@+id/extractresult"/>
        </LinearLayout>


    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btmnavnext"
        android:layout_alignParentBottom="true"
        app:menu="@menu/btm_nav_upload"
        android:background="@color/Splashbackground"
        app:itemBackground="@color/Splashbackground"
        app:itemTextColor="@color/darkgrey"
        app:itemIconTint="@color/darkgrey"
        >


    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>